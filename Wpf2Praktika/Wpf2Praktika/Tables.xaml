                            <DataGridTextColumn Binding="{Binding ID}" Header="ID" Width="*"/>
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="Firstname" Width="3*"/>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Lastname" Width="3*"/>
